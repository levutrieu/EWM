@{
    ViewData["Title"] = "Trang chủ";
}

<section style="display: none;">
    <div class="container py-4">
        <div class="row">
            <div class="col-lg-7 mx-auto d-flex justify-content-center flex-column">
                <h3 class="text-center">Tạo sự kiện</h3>
                <form role="form" id="contact-form" method="post" autocomplete="off">
                    <div class="card-body">
                        <div class="input-group input-group-static mb-4">
                            <label for="exampleFormControlSelect1" class="ms-0">Loại sự kiện</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option value="0" selected></option>
                                <option value="1">Thông thường</option>
                                <option value="2">Mở bán dự án bđs</option>
                                <option value="3">Đám cưới</option>
                            </select>
                        </div>
                        <div class="input-group input-group-static mb-4">
                            <label>Tên sự kiện</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="input-group mb-4 input-group-static">
                            <label>Địa điểm tổ chức</label>
                            <textarea name="location" class="form-control" id="location" rows="2"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="input-group input-group-static mb-4">
                                    <label>Thời gian bắt đầu</label>
                                    <input type="datetime-local" class="form-control" min="1800-01-01 00:00" max="2030-12-31 23:59">
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                            </div>
                        </div>
                        <div class="form-check form-switch mb-4 d-flex align-items-center">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" checked="">
                            <label class="form-check-label ms-3 mb-0" for="flexSwitchCheckDefault">Đồng ý với <a href="javascript:;" class="text-dark"><u>các điều khoản và điều kiện</u></a>.</label>
                        </div>
                        <div class="col-md-12 mb-4">
                            <button type="submit" class="btn bg-gradient-dark w-100">Tạo</button>
                        </div>
                        <p class="text-danger">
                            Tài khoản miễn phí chỉ tối đa 50 khách mời, để không bị giới hạn vui lòng <a class="text-info text-decoration-underline" href="/buy">nâng cấp tài khoản</a>.
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 my-auto">
                <h3>Tầm nhìn</h3>
